@model GuildRosterModels.Player

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Player</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerName" class="control-label">Player Name</label>
                <input asp-for="PlayerName" class="form-control" />
                <span asp-validation-for="PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WowClassId" class="control-label">Class</label>
                <select asp-for="WowClassId" class ="form-control" asp-items="ViewBag.WowClassId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SpecializationId" class="control-label">Specialization</label>
                <select asp-for="SpecializationId" class ="form-control" asp-items="ViewBag.SpecializationId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label">Player Role</label>
                <select asp-for="RoleId" class ="form-control" asp-items="ViewBag.RoleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label">Team</label>
                <select asp-for="TeamId" class ="form-control" asp-items="ViewBag.TeamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GuildRankId" class="control-label">Guild Rank</label>
                <select asp-for="GuildRankId" class ="form-control" asp-items="ViewBag.GuildRankId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
